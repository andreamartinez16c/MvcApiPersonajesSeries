@model IEnumerable<MvcApiPersonajesSeries.Models.Personaje>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Personajes" asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" style="width:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie)
            </td>
            <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Personajes" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Personajes" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Personajes" asp-action="Update" asp-route-id="@item.Id">Modificar</a>
            </td>
        </tr>
}
    </tbody>
</table>
